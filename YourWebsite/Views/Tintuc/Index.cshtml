
@{
    ViewBag.Title = "Your fashion - News";
    List<News> allNews = ViewBag.allNews;
    News lastestNews = allNews.ElementAt(allNews.Count - 1);
}


<div class="container">
    <div class="row" id="intro" style="margin:20px 0 20px 0;">
        <div class="col-md-6" id="left-intro" style="height:546px; display:table; overflow:hidden;">
            <div class="row" style="display:table-cell; vertical-align:middle;">
                <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:50px;">Cập nhật liên tục</p>
                <p style="font-family:'Times New Roman', Times, serif;font-size:60px; line-height:120%; color:#be0006;">Tin tức cộng đồng</p>
                <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:60px;">Your Fashion</p>
            </div>
        </div>
        <div class="col-md-6" id="right-popular-news">
            <h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:40px; color:#be0006;">TIn mới nhất</h2>
            <div style="height:500px; margin-top:20px;">
                <a href="/Tintuc/Details/@lastestNews.ID">
                    <div style="height:300px; background-image:url(@lastestNews.MainImage);"></div>

                </a>
                <div style="margin-top:20px; margin-bottom:10px; height:60px;">
                    <a href="/Tintuc/Details/@lastestNews.ID" style="text-decoration:none; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:35px; line-height:120%; color:#be0006;">@lastestNews.Title</a>
                </div>
                <p style="margin-top:30px; font-size:15px;">@lastestNews.ShortDes</p>
            </div>
        </div>
    </div>

    
    <div class="row" id="news">
        @{
            for (int i = 0; i < allNews.Count; i++)
            {
                News n = allNews.ElementAt(i);
                <div class="col-md-4" style="margin-top:20px;" >
                    <div style="border-right:1px solid red; border-bottom:1px solid red; border-radius:5px;">
                        <a href="/Tintuc/Details/@n.ID">
                            <div style="height:300px; background-image:url(@n.MainImage);"></div>

                        </a>
                        <div style="margin-top:20px; margin-bottom:10px; height:60px;">
                            <a href="/Tintuc/Details/@n.ID" style="text-decoration:none; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:20px; line-height:120%; color:#be0006;">@n.Title</a>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</div>